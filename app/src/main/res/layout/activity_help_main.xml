<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rahat_pdm.emergencyrescueandpolicehelperapp.HelpMain"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:ems="10"
            android:id="@+id/clue_of_crime" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পুলিশি সহায়তা"
            android:textSize="18dp"
            android:id="@+id/police"
            android:layout_margin="10dp"
            android:onClick="policeHelp"
            style="@style/button_text"
            android:background="@drawable/red_button"
            android:layout_gravity="center_horizontal" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ফায়ার সার্ভিস সহায়তা "
            android:textSize="18dp"
            android:id="@+id/firebutton"
            android:onClick="fireServiceHelp"
            style="@style/button_text"
            android:background="@drawable/red_button"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</ScrollView>
